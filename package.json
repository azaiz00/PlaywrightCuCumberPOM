  "type": "commonjs",
  "devDependencies": {
    "@cucumber/cucumber": "^12.2.0",
    "@faker-js/faker": "^9.9.0",
    "@playwright/test": "^1.56.1",
    "@types/node": "^24.10.1",
    "allure-cucumberjs": "^3.4.2",
    "dotenv": "^17.2.3",
    "ts-node": "^10.9.2"
  }
}
