{
  "name": "plcupom",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "npx playwright test",
    "test:bdd:html": "cucumber-js --config ./src/cucumber.js -f json:./test-results/cuReports/json_report.json --format html:./test-results/cuReports/html_report.html",
    "test:bdd:allure": "cucumber-js --config ./src/cucumber_allure.js --format allure-cucumberjs/reporter",
    "test:bdd:allure:headless": "cucumber-js --config ./src/cucumber_allure.js --format allure-cucumberjs/reporter --headless",
    "allure:gen:open": "npm run allure:generate && npm run allure:open",
    "allure:generate": "allure generate ./allure-results --clean -o ./allure-report",
    "allure:open": "allure open ./allure-report"
  },
